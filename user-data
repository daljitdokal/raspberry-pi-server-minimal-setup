#cloud-config
hostname: geeky-test-server


# ==================================================================
# Add users to the system
# ==================================================================
users:
  - name: daljit
    gecos: Daljit Singh
    primary_group: daljit
    groups: users, admin
    ssh_authorized_keys:
      - ssh-rsa  geekywebmaster-laptop
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
# ==================================================================



# ==================================================================
# Add packages to the system
# ==================================================================
package_upgrade: true
packages:
  - nano
  - curl
  - htop
  - git
  - smartmontools
  - fail2ban
  - knockd
  - sed
  - rsync
# ==================================================================



# ==================================================================
# Localisation
# ==================================================================
user-data:
  timezone: Pacific/Auckland
locale: en_NZ
# ==================================================================



# ==================================================================
# Harden ssh, set bash prompt
# ==================================================================
runcmd:
  - echo "PS1='\[\033[02;31m\]\u@\H:\[\033[01;34m\]\w\$\[\033[00m\] '" >> /home/daljit/.bashrc
  - sed -i -e '/^#Port/s/^.*$/Port 2222/' /etc/ssh/sshd_config
  - sed -i -e '/^#PermitRootLogin/s/^.*$/PermitRootLogin no/' /etc/ssh/sshd_config
  - sed -i -e '$aAllowUsers daljit' /etc/ssh/sshd_config
  - systemctl restart sshd
# ==================================================================
